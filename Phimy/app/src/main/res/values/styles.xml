<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppGreyTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorGrey</item>
        <item name="themeColorPrimaryDark">@color/colorGreyDark</item>
        <item name="themeColorAccent">@color/colorGreyAccent</item>
    </style>

    <style name="AppAmberTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorAmber</item>
        <item name="themeColorPrimaryDark">@color/colorAmberDark</item>
        <item name="themeColorAccent">@color/colorAmberAccent</item>
    </style>

    <style name="AppRedTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorRed</item>
        <item name="themeColorPrimaryDark">@color/colorRedDark</item>
        <item name="themeColorAccent">@color/colorRedAccent</item>
    </style>

    <style name="AppThemeMedia" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="AppNaranjaTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorNaranja</item>
        <item name="themeColorPrimaryDark">@color/colorNaranjaDark</item>
        <item name="themeColorAccent">@color/colorNaranjaAccent</item>
    </style>

    <style name="AppAguaTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorAgua</item>
        <item name="themeColorPrimaryDark">@color/colorAguaDark</item>
        <item name="themeColorAccent">@color/colorAguaAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">
        <!-- Custom layout for PreferenceFragmentCompat -->
        <item name="android:layout">@layout/pref_screen</item>
    </style>

    <!-- Preferencias Stylos custom Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="seriesRecyclerView">
        <item name="android:paddingLeft">@dimen/recyclerViewSeriesPaddingLeft</item>
        <item name="android:paddingTop">@dimen/recyclerViewSeriesPaddingTop</item>
        <item name="android:textSize">@dimen/seriesRecyclerViewTitulo</item>
        <item name="android:textColor">@color/series_titulo</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nombreCategoria">
        <item name="android:textColorPrimary">@color/album_titulo</item>
        <item name="android:background">@color/album_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/categoria_titulo_padding</item>
        <item name="android:layout_marginRight">@dimen/categoria_titulo_padding</item>
        <item name="android:layout_marginTop">@dimen/categoria_titulo_padding</item>
        <item name="android:textSize">@dimen/tv_categoria_titulo</item>
        <item name="android:textColor">@color/album_titulo</item>
        <item name="android:padding">8dp</item>
        <item name="android:alpha">0.80</item>
        <item name="android:maxLength">18</item>
    </style>

</resources>
